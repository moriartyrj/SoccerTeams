<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">
    <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/team" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textSize="15dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/name" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:textSize="25dp" android:layout_marginLeft="15dp" android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    <CheckBox
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/selected"
            android:layout_alignParentLeft="true" android:layout_marginLeft="270dp"
            android:layout_alignTop="@+id/name"
            android.clickable="false"/>
</RelativeLayout>